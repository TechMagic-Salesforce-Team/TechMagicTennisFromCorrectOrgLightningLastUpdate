<aura:component controller="AURA_GameController">
    <aura:attribute name="gameId" type="Id"/>
    <aura:attribute name="playerFromCookie" type="String"/>
    <aura:attribute name="existsInCurrentGame" type="Boolean"/>
    <aura:attribute name="tournamentId" type="Id"/>
    <aura:attribute name="game" type="Game__c"/>
    <aura:handler action="{!c.doInit}" name="init" value="{!this}"/>
    <aura:attribute name="canSubmit" type="Boolean" default="false"/>
    <aura:attribute name="isUndefined" type="Boolean" default="false"/>
    <aura:attribute name="player1Name" type="String" default="?"/>
    <aura:attribute name="player2Name" type="String" default="?"/>

    <aura:if isTrue="{!v.existsInCurrentGame}">
        <fieldset style="width: 100%; margin: 10px auto">
            <form class="slds-form--compound">
                <div class=" slds-grid slds-wrap">

                    <div class="slds-form-element slds-col slds-size--1-of-6 slds-medium-size--1-of-6 slds-large-size--1-of-6">
                    </div>

                    <div class="slds-form-element slds-col slds-size--1-of-3 slds-medium-size--2-of-7 slds-large-size--2-of-7">
                        <aura:if isTrue="{!v.player1Name != '?'}">
                        <h3 class="slds-text-heading--medium">{!v.player1Name}</h3>
                        </aura:if>

                        <aura:if isTrue="{!v.player1Name == '?'}">
                            <h3 class="slds-text-heading--medium">First competitor score</h3>
                        </aura:if>

                        <div class="slds-form-element__control slds-col slds-size--1-of-3 slds-medium-size--1-of-3 slds-large-size--1-of-3 slds-align--absolute-center"
                             style="margin-top: 10px;">
                            <ui:inputText class="slds-input" value="{!v.game.FirstCompetitorScore__c}"/>
                        </div>
                    </div>

                    <div class="slds-form-element slds-col slds-size--6-of-6 slds-medium-size--2-of-6 slds-large-size--1-of-6">
                    </div>

                    <!--<div class="slds-form-element slds-col slds-size&#45;&#45;1-of-3 slds-medium-size&#45;&#45;1-of-3 slds-large-size&#45;&#45;1-of-3">-->
                    <!--</div>-->

                    <div class="slds-form-element slds-col slds-size--1-of-3 slds-medium-size--2-of-7 slds-large-size--2-of-7">
                        <aura:if isTrue="{!v.player2Name != '?'}">
                            <h3 class="slds-text-heading--medium">{!v.player2Name}</h3>
                        </aura:if>

                        <aura:if isTrue="{!v.player2Name == '?'}">
                            <h3 class="slds-text-heading--medium">Second competitor score</h3>
                        </aura:if>

                        <div class="slds-form-element__control slds-col slds-size--1-of-3 slds-medium-size--1-of-3 slds-large-size--1-of-3 slds-align--absolute-center"
                             style="margin-top: 10px;">
                            <ui:inputText class="slds-input" value="{!v.game.SecondCompetitorScore__c}" />
                        </div>
                    </div>

                    <div class="slds-form-element slds-col slds-size--1-of-1 slds-medium-size--5-of-7 slds-large-size--5-of-7">
                    </div>

                    <div class="slds-form-element slds-col slds-size--1-of-3 slds-medium-size--1-of-3 slds-large-size--1-of-3">
                    </div>

                    <!--<div style="margin-top: 20px; margin-left: 7%;">-->
                            <!--<lightning:button label="Input Score" onclick="{!c.inputScoreFunc}"/>-->
                    <!--</div>-->


                    <!--<aura:if isTrue="{!v.canSubmit}">-->
                        <!--<div style="margin-top: 10px; margin-left: 10px">-->
                            <!--<lightning:button label="Submit Score"/>-->
                        <!--</div>-->
                    <!--</aura:if>-->
                </div>
            </form>
        </fieldset>
    </aura:if>

    <aura:if isTrue="{!!and(v.game.FirstCompetitorAccept__c,
            v.game.SecondCompetitorAccept__c)}">
    <div style="float: right; margin-top: 20px;">
        <aura:if isTrue="{!v.existsInCurrentGame}">
            <button class="slds-button slds-button--neutral" onclick="{!c.inputScoreFunc}">Input Score</button>
        </aura:if>
        <aura:if isTrue="{!v.canSubmit}">
            <button class="slds-button slds-button--neutral">Submit Score</button>
        </aura:if>
        <button class="slds-button slds-button--neutral" >Cancel</button>
        <!--<button class="slds-button slds-button&#45;&#45;neutral" onclick="{!c.closeWindow}" >Cancel</button>-->
        <!--<button class="slds-button slds-button&#45;&#45;neutral" onclick="{!c.closeWindow}" >Cancel</button>-->
    </div>
    </aura:if>

    <!--<aura:if isTrue="{!!v.existsInCurrentGame}">-->
        <!--<h1 class="slds-text-heading&#45;&#45;medium slds-text-align&#45;&#45;center">-->
            <!--You have no access to this game-->
        <!--</h1>-->
    <!--</aura:if>-->
